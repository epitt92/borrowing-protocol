{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": "error",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["error","^0.8.4"],
    "max-states-count": "off",
    "no-empty-blocks": "off",
    "not-rely-on-time": "off",
    "var-name-mixedcase": "off",
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ]
  }
}
